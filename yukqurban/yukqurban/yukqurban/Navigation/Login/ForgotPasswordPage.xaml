<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="yukqurban.Navigation.Login.ForgotPasswordPage"
             xmlns:control="clr-namespace:yukqurban.Controls" BackgroundColor="WhiteSmoke"
             Title="Lupa Password">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand">

            <!--<Image Source="bglogin.png" Aspect="AspectFill"/>-->
            <StackLayout VerticalOptions="FillAndExpand">
                <Frame Style="{StaticResource frame}" Margin="10">
                    <StackLayout>
                        <Label Text="Masukan Email Anda" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Large" Margin="10,10,10,0" TextColor="Black"/>
                        <control:SeparatorView bgColor="Black" HorizontalOptions="Center" WidthRequest="120" SeparatorHeight="3" Margin="0,0,0,10"/>

                        <control:EntryRounded Placeholder="Email" Keyboard="Email"/>

                        <Label Text="Password Akan dikirim ke Email"/>
                    </StackLayout>
                </Frame>

                <Grid Margin="10,0,10,10">
                    <Button Grid.Column="1" Style="{StaticResource btnMain}" Text="Submit"/>
                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>